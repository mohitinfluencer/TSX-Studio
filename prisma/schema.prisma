generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                   String              @id @default(cuid())
  name                 String?
  email                String?             @unique
  emailVerified        DateTime?
  image                String?
  plan                 String              @default("FREE")
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  stripeCustomerId     String?             @unique
  stripeSubscriptionId String?             @unique
  accounts             Account[]
  logs                 ActivityLog[]
  creditTransactions   CreditTransaction[]
  projects             Project[]
  referralCode         ReferralCode?
  referralReceived     ReferralEvent?      @relation("ReferredUser")
  referralsMade        ReferralEvent[]     @relation("Referrer")
  renderJobs           RenderJob[]
  renderUsage          RenderUsage[]
  sessions             Session[]
  submittedTemplates   Template[]
  reports              TemplateReport[]
  transcriptionJobs    TranscriptionJob[]
  entitlement          UserEntitlement?
  workspaces           WorkspaceMember[]
}

model UserEntitlement {
  id             String   @id @default(cuid())
  userId         String   @unique
  plan           String   @default("FREE")
  creditsBalance Int      @default(3)
  monthlyCredits Int      @default(3)
  resetDay       Int      @default(1)
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CreditTransaction {
  id                    String   @id @default(cuid())
  userId                String
  type                  String
  amount                Int
  renderJobId           String?
  stripePaymentIntentId String?
  createdAt             DateTime @default(now())
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workspace {
  id        String            @id @default(cuid())
  name      String
  ownerId   String
  createdAt DateTime          @default(now())
  projects  Project[]
  members   WorkspaceMember[]
}

model WorkspaceMember {
  id          String    @id @default(cuid())
  workspaceId String
  userId      String
  role        String    @default("MEMBER")
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
}

model Project {
  id           String           @id @default(cuid())
  userId       String
  workspaceId  String?
  name         String
  status       String           @default("Draft")
  resolution   String           @default("1080p")
  fps          Int              @default(30)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  thumbnailUrl String?
  logs         ActivityLog[]
  workspace    Workspace?       @relation(fields: [workspaceId], references: [id])
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions     ProjectVersion[]
  renderJobs   RenderJob[]
}

model ProjectVersion {
  id               String   @id @default(cuid())
  projectId        String
  versionNumber    Int
  title            String?
  code             String
  validated        Boolean  @default(false)
  validationErrors String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model RenderJob {
  id              String    @id @default(cuid())
  userId          String
  projectId       String
  versionId       String
  status          String    @default("QUEUED")
  outputFormat    String    @default("MP4")
  resolution      String    @default("1080p")
  fps             Int       @default(30)
  durationSeconds Float?
  progress        Int       @default(0)
  errorMessage    String?
  logs            String?
  outputUrl       String?
  outputSizeBytes BigInt?
  createdAt       DateTime  @default(now())
  startedAt       DateTime?
  finishedAt      DateTime?
  updatedAt       DateTime  @updatedAt
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RenderUsage {
  id              String   @id @default(cuid())
  userId          String
  month           String
  rendersCount    Int      @default(0)
  minutesRendered Float    @default(0)
  storageBytes    BigInt   @default(0)
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month])
}

model Template {
  id              String           @id @default(cuid())
  title           String
  description     String
  category        String
  tags            String
  previewImageUrl String?
  code            String
  isPublic        Boolean          @default(false)
  isFeatured      Boolean          @default(false)
  authorId        String
  downloadsCount  Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  author          User             @relation(fields: [authorId], references: [id], onDelete: Cascade)
  reports         TemplateReport[]
}

model TemplateReport {
  id         String   @id @default(cuid())
  templateId String
  reporterId String
  reason     String
  createdAt  DateTime @default(now())
  reporter   User     @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model ReferralCode {
  id        String   @id @default(cuid())
  userId    String   @unique
  code      String   @unique
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ReferralEvent {
  id             String   @id @default(cuid())
  referrerId     String
  referredUserId String   @unique
  status         String   @default("SIGNED_UP")
  createdAt      DateTime @default(now())
  referredUser   User     @relation("ReferredUser", fields: [referredUserId], references: [id], onDelete: Cascade)
  referrer       User     @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  projectId String?
  action    String
  meta      String?
  createdAt DateTime @default(now())
  project   Project? @relation(fields: [projectId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model TranscriptionJob {
  id              String   @id @default(cuid())
  userId          String
  status          String   @default("QUEUED")
  model           String   @default("base")
  fileName        String
  filePath        String
  jsonOutput      String?
  durationSeconds Float?
  errorMessage    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
