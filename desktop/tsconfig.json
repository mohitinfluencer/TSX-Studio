{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist-main",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "main.ts",
        "preload.ts",
        "engine/**/*"
    ]
}